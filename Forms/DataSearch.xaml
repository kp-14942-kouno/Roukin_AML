<Window x:Class="MyTemplate.Forms.DataSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTemplate.Forms"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="WhiteSmoke"
        Loaded="Window_Loaded"
        Title="データ検索" Height="640" Width="860">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="266"/>
            <ColumnDefinition Width="106"/>
            <ColumnDefinition Width="106"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="76"/>
            <ColumnDefinition Width="74"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="34"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="102"/>
            <RowDefinition Height="34"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="34"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="lb_Columns" Grid.Column="0" Grid.Row="0" Grid.RowSpan="6" Margin="3" BorderThickness="1" SelectionChanged="lb_Columns_SelectionChanged"/>
        <ComboBox x:Name="cmb_Conjunction" Grid.Column="1" Grid.Row="0" Margin="3" BorderThickness="1"/>
        <ComboBox x:Name="cmb_Comparison" Grid.Column="2" Grid.Row="0" Margin="3" BorderThickness="1"/>
        <Button x:Name="bt_Add" Content="▼" Grid.Column="5" Grid.Row="1" Margin="3" Click="bt_Add_Click"/>
        <Button x:Name="bt_Delete" Content="✕" Grid.Column="5" Grid.Row="2" Margin="3" Click="bt_Delete_Click"/>
        <Button x:Name="bt_Search" Content="●" Grid.Column="5" Grid.Row="4" Margin="3" Click="bt_Search_Click"/>
        <Button x:Name="bt_Close" Content="閉じる" Grid.Column="4" Grid.Row="8" Grid.ColumnSpan="2" Margin="3" Click="bt_Close_Click"/>
        <TextBox x:Name="tx_Value" Grid.Column="1" Grid.Row=" 1" Grid.ColumnSpan="4" Margin="3" GotFocus="tx_Value_GotFocus"/>
        <TextBlock x:Name="tb_Count" Grid.Column="5" Grid.Row="5" Margin="3" FontSize="14" TextAlignment="Right" VerticalAlignment="Bottom" Background="SteelBlue" Foreground="White"/>

        <!--Where文用DataGrid-->
        <DataGrid x:Name="dg_Where" Grid.Row="2" Grid.Column="1" Grid.RowSpan="4" Grid.ColumnSpan="4" Margin="3" IsReadOnly="True" ItemsSource="{Binding}" AutoGenerateColumns="False">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="Foreground" Value="Blue"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>

                <DataGridTemplateColumn Header="">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="bt_DeleteWhere" Content="削除" Width="64" Click="bt_DeleteWhere_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn IsReadOnly="True" Header="" Binding="{Binding field_name}" Width="AUTO" Visibility="Collapsed"/>
                <DataGridTextColumn IsReadOnly="True" Header="" Binding="{Binding conjunction_type}" Width="AUTO"/>
                <DataGridTextColumn IsReadOnly="True" Header="項目名称" Binding="{Binding field_caption}" Width="AUTO"/>
                <DataGridTextColumn IsReadOnly="True" Header="" Binding="{Binding comparison_type}" Width="AUTO"/>
                <DataGridTextColumn IsReadOnly="True" Header="検索値" Binding="{Binding value}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!--検索結果用DataGrid-->
        <DataGrid x:Name="dg_Search" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="6" Margin="3" IsReadOnly="True" ItemsSource="{Binding}" AutoGenerateColumns="False">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="Foreground" Value="Blue"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>
        
         <!--Page-->
        <Grid x:Name="gd_Page" Grid.Row="7" Grid.ColumnSpan="4" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="48"/>
                <ColumnDefinition Width="48"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,15,0">
                <TextBlock Text="Page：" FontSize="14"/>
                <TextBox x:Name="tx_Page" FontSize="14" Text="1" Margin="5,0,0,0" KeyDown="tx_Page_KeyDown"/>
                <TextBlock x:Name="tb_PageCount" FontSize="14" Text="　／　100　：　Record. 10000001"/>
            </StackPanel>

            <Button x:Name="bt_Previouse" Grid.Column="1" Content="＜" Width="32" Margin="3" Click="bt_Previouse_Click"/>
            <Button x:Name="bt_Next" Grid.Column="2" Content="＞" Width="32" Margin="3" Click="bt_Next_Click"/>
        </Grid>

    </Grid>
</Window>
