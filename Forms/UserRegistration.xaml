<Window x:Class="MyTemplate.Forms.UserRegistration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTemplate.Forms"
        xmlns:uc="clr-namespace:MyTemplate.UserControls"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="UesrRegistration" Height="360" Width="240">
    <Grid>
        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center">
            <Label Content="User Name" VerticalAlignment="Center" Height="24"/>
                <uc:MyEditTextBox x:Name="UserName" FontSize="14" Width="200" Height="32" VerticalContentAlignment="Center"/>
                <Label Content="User ID" VerticalAlignment="Center" Height="24"/>
                <uc:MyEditTextBox x:Name="UserId" FontSize="14" Width="200" Height="32" VerticalContentAlignment="Center"/>

                <Label Content="Password" VerticalAlignment="Center" Height="24"/>
                <uc:MyEditTextBox x:Name="PassWord" FontSize="14" Width="200" Height="32" VerticalContentAlignment="Center"/>
                <Label Content="Authority" VerticalAlignment="Center" Height="24"/>
                <ComboBox x:Name="cmb_Authority" Width="200" Height="26" VerticalAlignment="Bottom" VerticalContentAlignment="Center"/>

            <Button x:Name="bt_Save" Content="登録" VerticalAlignment="Bottom" Width="160" Height="32" Margin="0,24,0,0" BorderThickness="0" Background="LightSkyBlue" Click="bt_Save_Click"/>
            <Button x:Name="bt_Close" Content="閉じる" VerticalAlignment="Bottom" Width="160" Height="32" Margin="0,5,0,0" BorderThickness="0" Background="Wheat" Click="bt_Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
