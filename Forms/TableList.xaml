<Window x:Class="MyTemplate.Forms.TableList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTemplate.Forms"
        mc:Ignorable="d"
        SizeToContent="Height"
        Loaded="Window_Loaded"
        Title="TableList" Height="360" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <DataGrid x:Name="dg_TableList" Grid.Row="0" Margin="5" IsReadOnly="False" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="選択" Binding="{Binding isSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="Auto" IsReadOnly="False" />
                <DataGridTextColumn Header="テーブルID" Binding="{Binding table_id}" Width="Auto" IsReadOnly="True"/>
                <DataGridTextColumn Header="テーブル名" Binding="{Binding table_name}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="テーブル名称" Binding="{Binding table_caption}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="プロバイダー名" Binding="{Binding provider_name}" Width="*" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" Height="48" >
            <Button x:Name="bt_Select" Content="全選択" Height="32" Width="64" Margin="5" Click="bt_Select_Click"/>
            <Button x:Name="bt_Clear" Content="全解除" Height="32" Width="64" Margin="5"  Click="bt_Clear_Click"/>
            <Button x:Name="bt_Create" Content="テーブル作成" Height="32" Width="128" Margin="5"  Click="bt_Button_Click"/>
            <Button x:Name="bt_Delete" Content="テーブル削除" Height="32" Width="128" Margin="5" Click="bt_Button_Click"/>
            <Button x:Name="bt_Close" Content="閉じる" Height="32" Width="128" Margin="5" Click="bt_Close_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
