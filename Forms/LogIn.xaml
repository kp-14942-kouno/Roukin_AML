<Window x:Class="MyTemplate.Forms.LogIn"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTemplate.Forms"
        xmlns:my="clr-namespace:MyLibrary.MyControls;assembly=MyLibrary"
        xmlns:ctrl="clr-namespace:MyTemplate.Class.MyCustomControlClass"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Closed="Window_Closed"
        Title="LogIn" Height="320" Width="240">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="LogIn" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" />

        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center">
            <Label Content="User ID" FontSize="10"/>
            <my:MyTextBox x:Name="UserId" IsPassword="False" Width="200" BorderThickness="0,0,0,0.5" BorderBrush="Black" />
            <Label Content="Password" FontSize="10"/>
            <my:MyTextBox x:Name="Password" IsPassword="True" Width="200" BorderThickness="0,0,0,0.5" BorderBrush="Black" />
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center">
            <ctrl:MyButton x:Name="bt_LogIn" Content="Login" Width="160" Height="32" Margin="5" Background="LightSkyBlue" BorderThickness="0" Click="bt_LogIn_Click"/>
            <ctrl:MyButton x:Name="bt_Cancel" Content="Cancel" Width="160" Height="32" Margin="5" Background="Wheat" BorderThickness="0" Click="bt_Cancel_Click"/>
        </StackPanel>
        
    </Grid>
</Window>
