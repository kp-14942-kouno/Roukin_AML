<Window x:Class="MyTemplate.Forms.MultiSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTemplate.Forms"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MultiSelect" Height="360" Width="480">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="29"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="Path" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="3,0,3,0"/>
        <Label x:Name="Count" Grid.Column="2" VerticalAlignment="Center" HorizontalContentAlignment="Right" Margin="0,0,5,0"/>
        <Button x:Name="ReLoad" Content="RELOAD" Grid.Row="2" Grid.Column="0" Margin="3" Click="Reload_Click"/>
        <Button x:Name="OK" Content="OK" Grid.Row="2" Grid.Column="2" Margin="3" Click="OK_Click"/>
        <Button x:Name="CANCEL" Content="CANCEL" Grid.Row="3" Grid.Column="2" Margin="3,0,3,3" Click="CANCEL_Click"/>

        <DataGrid x:Name="dg_FileList" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="3,0,3,0" IsReadOnly="True" ItemsSource="{Binding}" AutoGenerateColumns="False">
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="Foreground" Value="Blue"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="" Width="96">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="削除" Click="DeleteButton_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn IsReadOnly="True" Header="ファイル名" Binding="{Binding file_name}" Width="*"/>
                <DataGridTextColumn IsReadOnly="True" Header="パス" Visibility="Collapsed" Binding="{Binding file_path}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
