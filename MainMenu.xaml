<Window x:Class="MyTemplate.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTemplate"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Vertical">
            <Button Content="不備状" Width="164" Height="32" Click="Button_Click"/>
            <Button Content="団体・パンチデータ読込み" Width="164" Height="32" Margin="0,5,0,0" Click="Button_Click_1"/>
            <Button Content="機能チェック" Width="164" Height="32" Margin="0,5,0,0" Click="Button_Click_2"/>
        </StackPanel>

        <DataGrid x:Name="dg_View" Grid.Row="1" AutoGenerateColumns="True" IsReadOnly="True" CanUserAddRows="False"/>

    </Grid>
</Window>
