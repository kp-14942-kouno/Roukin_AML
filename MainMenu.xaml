<Window x:Class="MyTemplate.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTemplate"
        xmlns:custom="clr-namespace:MyLibrary.MyControls;assembly=MyLibrary"
        mc:Ignorable="d"
        Title="MainMenu" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="24"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="団体" FontSize="16" Background="SteelBlue" Foreground="White" TextAlignment="Center"/>

        </Grid>
        
        <!--個人（WEB）-->
        <Grid Grid.Column="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="24"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="個人" FontSize="16" Background="SteelBlue" Foreground="White" TextAlignment="Center"/>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" BorderThickness="1" BorderBrush="Black" Margin="0,5,0,5">
                    <StackPanel Grid.Row="0" Margin="5">
                        <TextBlock Text="■WEBCASデータ変換" TextAlignment="Left"/>
                        <Button x:Name="bt_InsWebcas" Content="WEBCASデータ読込" Width="192" Height="32" Margin="5" Click="bt_InsWebcas_Click"/>
                        <TextBlock x:Name="tb_WebcasCount" Text="1024件" Margin="0,0,5,0" TextAlignment="Right"/>
                        <Button x:Name="bt_ExpWebcas" Content="WEBCASデータ変策出力" Width="192" Height="32" Margin="5" Click="bt_ExpWebcas_Click"/>
                    </StackPanel>
                </Border>


            </Grid>

        </Grid>

    </Grid>
</Window>
