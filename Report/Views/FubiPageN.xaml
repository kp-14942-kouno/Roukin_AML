<UserControl x:Class="MyTemplate.Report.Views.FubiPageN"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyTemplate.Report.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1123" d:DesignWidth="795">
    <Grid Margin="1cm">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5cm"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1.5cm"/>
        </Grid.RowDefinitions>

        <Image x:Name="imb_QR"  Width="1cm" Height="1cm" HorizontalAlignment="Right"/>

        <Border Grid.Row="1" BorderThickness="1" BorderBrush="Black">
            <ItemsControl x:Name="FubiList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Fubi}" Grid.Column="0" TextWrapping="Wrap" Margin="0.2cm,0,0.2cm,0"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <TextBlock Grid.Row="2" x:Name="tb_Pages" HorizontalAlignment="Right" Background="White" Margin="0,0.5cm,0,0"/>

    </Grid>
</UserControl>
