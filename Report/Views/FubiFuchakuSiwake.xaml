<UserControl x:Class="MyTemplate.Report.Views.FubiFuchakuSiwake"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyTemplate.Report.Views"
             mc:Ignorable="d" 
             d:DesignHeight="1123" d:DesignWidth="795">
    <Grid Margin="1cm" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5cm"/>
            <RowDefinition Height="5cm"/>
            <RowDefinition Height="1.5cm"/>
            <RowDefinition Height="18cm"/>
            <RowDefinition Height="1.5cm"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="ろうきん AML業務 不備状不着封筒仕分けリスト" FontSize="24" TextAlignment="Center" VerticalAlignment="Center"/>
        <Canvas Grid.Row="1" Margin="0.5cm">
            <TextBlock Text="仕分け" FontSize="24" Canvas.Left="1cm" Width="2cm" TextAlignment="Center"/>
            <Border BorderThickness="1" BorderBrush="Black" Width="2cm" Height="2cm" Canvas.Left="1cm" Canvas.Top="1cm">
                <TextBlock Text="印" FontSize="36" Foreground="LightGray" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>

            <TextBlock Text="確認" FontSize="24" Canvas.Left="3.5cm" Width="2cm" TextAlignment="Center"/>
            <Border BorderThickness="1" BorderBrush="Black" Width="2cm" Height="2cm" Canvas.Left="3.5cm" Canvas.Top="1cm">
                <TextBlock Text="印" FontSize="36" Foreground="LightGray" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>
        </Canvas>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0.1cm">
            <TextBlock Text="金融機関名：" FontSize="20" VerticalAlignment="Center"/>
            <TextBlock x:Name="tb_BankCode" FontSize="20" VerticalAlignment="Center"/>
            <TextBlock Text="／" FontSize="20" VerticalAlignment="Center"/>
            <TextBlock x:Name="tb_BankName" FontSize="20" VerticalAlignment="Center"/>
        </StackPanel>

        <Border Grid.Row="3" BorderThickness="1" BorderBrush="Black" Width="19cm">
            <ItemsControl x:Name="ItemList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="0,0,0,1" BorderBrush="Black" Margin="0.5cm,0,0.5cm,0">
                            <Grid Margin="0.5cm,0.2cm,0.2cm,0.2cm">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4cm"/>
                                    <ColumnDefinition Width="4cm"/>
                                    <ColumnDefinition Width="10cm"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding taba_num}" Grid.Column="0" FontSize="16"/>
                                <TextBlock Text="{Binding bpo_num}" Grid.Column="1" FontSize="16"/>
                                <TextBlock Text="{Binding group_name}" Grid.Column="2" FontSize="16"/>
                                <Border Grid.Column="3" Width="20" Height="20" BorderBrush="Black" BorderThickness="1"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
        <TextBlock x:Name="tb_Pages" Text="ページ数：" FontSize="16" Grid.Row="4" Margin="0,0,0.5cm,0" VerticalAlignment="Center" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>
