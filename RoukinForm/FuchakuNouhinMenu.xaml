<Window x:Class="MyTemplate.RoukinForm.FuchakuNouhinMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTemplate.RoukinForm"
        SizeToContent="WidthAndHeight"
        mc:Ignorable="d"
        Title="不着納品">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderThickness="1" BorderBrush="Black" SnapsToDevicePixels="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="不着納品" Background="SteelBlue" Foreground="White" FontSize="14" TextAlignment="Center"/>

                <StackPanel Grid.Row="1" Margin="5">
                    <Button x:Name="bt_InsDantai" Content="不着納品対象データ読込" Width="192" Height="32" Margin="5" Click="bt_InsFuchakuData_Click"/>
                    <TextBlock Text="団体_53_不着納品対象_" HorizontalAlignment="Right" FontSize="11" Foreground="OrangeRed" Margin="0,0,5,0"/>
                    <TextBlock x:Name="tb_FuchakuCount" Text="0件" Margin="0,0,5,0" TextAlignment="Right"/>

                    <Button x:Name="bt_ExpData" Content="納品データ作成" Width="192" Height="32" Margin="5" Click="bt_ExpNouhin_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        <Button x:Name="bt_Close" Grid.Row="2" Content="閉じる" Width="192" Height="32" Margin="5" Click="bt_Close_Click"/>
    </Grid>
</Window>
