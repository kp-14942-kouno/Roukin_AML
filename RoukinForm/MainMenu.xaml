<Window x:Class="MyTemplate.RoukinForm.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTemplate.RoukinForm"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        UseLayoutRounding="True"
        SizeToContent="WidthAndHeight"
        Title="RoukinMainMenu">
    <Grid Margin="5">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="48"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Grid.Column="0">
            <Border BorderThickness="1" BorderBrush="Black" SnapsToDevicePixels="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="個人（WEB）" Background="SteelBlue" Foreground="White" FontSize="14" TextAlignment="Center"/>

                    <StackPanel Grid.Row="1" Orientation="Vertical">
                        <Button x:Name="bt_WebcasCngMenu" Content="WEBCASデータ変換 MENU" Width="192" Height="32" Margin="5" Click="bt_WebcasCngMenu_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="0" Margin="5,5,0,0">
            <Border BorderThickness="1" BorderBrush="Black" SnapsToDevicePixels="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="団体（申請書）" Background="SteelBlue" Foreground="White" FontSize="14" TextAlignment="Center"/>

                    <StackPanel Grid.Row="1" Orientation="Vertical">
                        <Button x:Name="bt_FubiCheck" Content="不備審査 MENU" Width="192" Height="32" Margin="5" Click="bt_FubiCheck_Click"/>
                        <Button x:Name="bt_FubiPrint" Content="不備状印刷 MENU" Width="192" Height="32" Margin="5" Click="bt_FubiPrint_Click"/>
                        <Button x:Name="bt_ShiwakeList" Content="申請書仕分リスト MENU" Width="192" Height="32" Margin="5" Click="bt_ShiwakeList_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Margin="5,0,0,0">
            <Border BorderThickness="1" BorderBrush="Black" SnapsToDevicePixels="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="納品処理" Background="SteelBlue" Foreground="White" FontSize="14" TextAlignment="Center"/>

                    <StackPanel Grid.Row="1" Orientation="Vertical">
                        <Button x:Name="bt_RoukinNouhinMenu" Content="勘定系・本人確認納品 MENU" Width="192" Height="32" Margin="5" Click="bt_RoukinNouhinMenu_Click"/>
                        <Button x:Name="bt_KinkoNouhinMenu" Content="金庫事務納品 MENU" Width="192" Height="32" Margin="5" Click="bt_KinkoNouhinMenu_Click"/>
                        <Button x:Name="bt_FubiNouhinMenu" Content="不備納品 MENU" Width="192" Height="32" Margin="5" Click="bt_FubiNouhinMenu_Click"/>

                        <Button x:Name="bt_Kinou" Content="機能テスト" Width="192" Height="32" Margin="5" Click="bt_Kinou_Click"/> 

                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
            <Button x:Name="bt_Close" Content="閉じる" Width="192" Height="32" HorizontalAlignment="Right" Margin="5" Click="bt_Close_Click"/>
        </Grid>
    </Grid>
</Window>
