<Window x:Class="MyTemplate.FubiPrint"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTemplate"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Title="不備状印刷">
    <Grid Margin="5,5,5,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="32"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="48"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
            <DataGrid x:Name="dg_FubiList" Height="320" AutoGenerateColumns="False" CanUserAddRows="False" Width="632">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="選択" Width="50" Binding="{Binding IsSelected, Mode=TwoWay}" IsReadOnly="False"/>
                    <DataGridTextColumn Header="QRコード" Binding="{Binding qr_code}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="氏名" Binding="{Binding name}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="不備コード" Binding="{Binding fubi_code}" IsReadOnly="True"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Border Grid.Row="2" Grid.Column="0" BorderThickness="1" BorderBrush="Black" SnapsToDevicePixels="True" Margin="0,5,5,0">
            <StackPanel Orientation="Vertical">
                <Label Content="不備状対象読込" FontSize="10" Background="LightSeaGreen" Foreground="White" HorizontalContentAlignment="Center"/>
                <Button x:Name="bt_InpFubiData" Content="不備状データ読込" Width="196" Height="32" Margin="5" Click="bt_InpFubiData_Click"/>
                <TextBlock x:Name="tb_fubiCount" Text="100件" Margin="0,0,5,0" HorizontalAlignment="Right"/> 
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Grid.Column="1" BorderThickness="1" BorderBrush="Black" Margin="0,5,5,0" SnapsToDevicePixels="True">
            <StackPanel Orientation="Vertical">
                <Label Content="一括処理" FontSize="10" Background="CornflowerBlue" Foreground="White" HorizontalContentAlignment="Center"/>
                <Button x:Name="bt_Print" Content="不備状印刷・画像作成" Width="196" Height="32" Margin="5" Click="bt_Print_Click"/>
                <Button x:Name="bt_Preview" Content="不備状プレビュー" Width="196" Height="32" Margin="5" Click="bt_Preview_Click" />
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Grid.Column="2" BorderThickness="1" BorderBrush="Black" Margin="0,5,0,0" SnapsToDevicePixels="True">
            <StackPanel Orientation="Vertical">
                <Label Content="個別処理" FontSize="10" Background="CornflowerBlue" Foreground="White" HorizontalContentAlignment="Center"/>
                <Button x:Name="bt_PrintOnly" Content="不備状印刷" Width="196" Height="32" Margin="5" Click="bt_PrintOnly_Click"/>
                <Button x:Name="bt_ExpImage" Content="不備状画像作成" Width="196" Height="32" Margin="5" Click="bt_ExpImage_Click"/>
                <Button x:Name="bt_ExpData" Content="ビートル用データ作成" Width="196" Height="32" Margin="5" Click="bt_ExpData_Click"/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
            <Button x:Name="bt_AllSelect" Content="全選択" Width="98" Height="24" Click="bt_AllSelect_Click"/>
            <Button x:Name="bt_AllUnSelect" Content="全解除" Width="98" Height="24" Margin="5,0,0,0" Click="bt_AllUnSelect_Click"/>
        </StackPanel>
        
        <ComboBox x:Name="cmb_PrinterList" DisplayMemberPath="Name" Grid.Row="1" Grid.Column="2" Height="24" HorizontalAlignment="Stretch"/>

        <Button x:Name="bt_Close" Grid.Row="3" Grid.Column="2" Content="閉じる" Width="196" Height="32" Click="bt_Close_Click"/>

    </Grid>
</Window>
